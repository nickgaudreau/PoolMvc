@model IEnumerable<PoolHockeyBLL.ViewModels.NewsFeedVm>

@{
    ViewBag.Title = "Nouvelles";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<div class="banner-stats">
    <div class="container-fluid">
        <h1>Actualités dans la LNH</h1>
        <em></em>
        <h2><a href="@Url.Action("Index", "Home", new {Area = "Common"})"><span class="fa fa-home"></span></a><label>/</label>Nouvelles</h2>
    </div>
</div>

<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            
            <div class="item active">
                <img src="@Model.ElementAt(0).ImgUrl">
                <div class="carousel-caption">
                    <h4><a href="@Model.ElementAt(0).Link" target="_blank">@Model.ElementAt(0).Title</a></h4>
                    <p>@Model.ElementAt(0).Description </p>
                    <span>@Model.ElementAt(0).PubDate</span>
                </div>
            </div><!-- End Item -->

            <div class="item">
                <img src="@Model.ElementAt(1).ImgUrl">
                <div class="carousel-caption">
                    <h4><a href="@Model.ElementAt(1).Link" target="_blank">@Model.ElementAt(1).Title</a></h4>
                    <p>@Model.ElementAt(1).Description </p>
                    <span>@Model.ElementAt(1).PubDate</span>
                </div>
            </div><!-- End Item -->

            <div class="item">
                <img src="@Model.ElementAt(2).ImgUrl">
                <div class="carousel-caption">
                    <h4><a href="@Model.ElementAt(2).Link" target="_blank">@Model.ElementAt(2).Title</a></h4>
                    <p>@Model.ElementAt(2).Description </p>
                    <span>@Model.ElementAt(2).PubDate</span>
                </div>
            </div><!-- End Item -->

            <div class="item">
                <img src="@Model.ElementAt(3).ImgUrl">
                <div class="carousel-caption">
                    <h4><a href="@Model.ElementAt(3).Link" target="_blank">@Model.ElementAt(3).Title</a></h4>
                    <p>@Model.ElementAt(3).Description </p>
                    <span>@Model.ElementAt(3).PubDate</span>
                </div>
            </div><!-- End Item -->
            <div class="item">
                <img src="@Model.ElementAt(4).ImgUrl">
                <div class="carousel-caption">
                    <h4><a href="@Model.ElementAt(4).Link" target="_blank">@Model.ElementAt(4).Title</a></h4>
                    <p>@Model.ElementAt(4).Description </p>
                    <span>@Model.ElementAt(4).PubDate</span>
                </div>
            </div><!-- End Item -->

        </div><!-- End Carousel Inner -->

        <ul class="list-group col-sm-4">
            <li data-target="#myCarousel" data-slide-to="0" class="list-group-item active"><h4>@Model.ElementAt(0).Title</h4></li>
            <li data-target="#myCarousel" data-slide-to="1" class="list-group-item"><h4>@Model.ElementAt(1).Title</h4></li>
            <li data-target="#myCarousel" data-slide-to="2" class="list-group-item"><h4>@Model.ElementAt(2).Title</h4></li>
            <li data-target="#myCarousel" data-slide-to="3" class="list-group-item"><h4>@Model.ElementAt(3).Title</h4></li>
            <li data-target="#myCarousel" data-slide-to="4" class="list-group-item"><h4>@Model.ElementAt(4).Title</h4></li>
        </ul>
        <!-- Controls -->
        <div class="carousel-controls">
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div><!-- End Carousel -->
</div>

@section scripts{
    <script>
        
    </script>
}
